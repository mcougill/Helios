<div class="container-fluid">
    <div class="container">
        <div class="row">

            {{#if rides}} {{#each rides}} {{#if uber}}
            <div class="col-sm-3 request cardDynamic" 
            data-picklat={{coordinates.pickup.lat}}
            data-picklng={{coordinates.pickup.lng}}
            data-destlat={{coordinates.destination.lat}}
            data-destlng={{coordinates.destination.lng}}
            data-id={{id}} 
            data-company={{company}}>
                <div class="imageBox">
                    <img src="./assets/images/uberLogo.jpg" class="img-responsive" alt="uberLogo">
                    <h3>{{type}}</h3>
                    <h4>{{estimate}}</h4>
                </div>
            </div>
            {{else}}

            <div class="col-sm-3 request cardDynamic" 
            data-picklat={{coordinates.pickup.lat}} 
            data-picklng={{coordinates.pickup.lng}}
            data-destlat={{coordinates.destination.lat}} 
            data-destlng={{coordinates.destination.lng}}
            data-company={{company}}>
                <div class="imageBox">
                    <img src="./assets/images/lyftLogo.jpg" class="img-responsive" alt="uberLogo">
                    <h3>{{type}}</h3>
                    <h4>{{estimate}}</h4>
                </div>
            </div>

            {{/if}} {{/each}} {{/if}}

        </div>
    </div>
</div>